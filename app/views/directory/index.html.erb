
<%= render 'search_box' %>
<%= render 'layouts/messages' %>
<!-- Page Content -->
<div class="container">
    <!-- /.row -->
    <div class="col-md-12">
        <%= render 'sidebar' %>
        <div class="col-md-9 no-padding"  id='list-top'>
          <div class='index-header'>
            <h1><%=@description%></h1>
          </div>

          <%if @bots.length >0%>
            <%= render partial: 'bot', collection: @bots %>
          <%else%>
          <div class='well'%>
            <%=I18n.t('directory.no_bot')%>
          </div>
          <%end%>

          <div class='row clearfix col-sm-12 text-center'>
          <br>
            <%= will_paginate @bots, class:'apple_pagination', params: {anchor: 'list-top'} %>
            <%=link_to I18n.t('add_bot'), new_bot_path, class: 'btn btn-primary' if current_user && current_user.has_role?(:admin)%>
          </div>
        </div>
    </div>
</div>