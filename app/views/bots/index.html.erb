<h1><%= pluralize @bots.total_entries, 'bot'%> </h1>
<div class='col-sm-3'>
  <%= select_tag :category, options_for_select(Bot::CATEGORIES, params[:category], ),  class: 'form-control input-sm', id:'bots-category',include_blank: I18n.t('category.all')%>
</div>
<div class='col-sm-3'>
  <%= select_tag :platform,
      options_for_select(
        Provider.all.map{|p| [p.name, p.id]},
        params[:platform]
      ),
      class: 'form-control input-sm', id:'bots-platform',include_blank: I18n.t('platform.all')%>
</div>
<div class='col-sm-6'>
<%= text_field_tag :keywords, params[:keywords], id:'bots-keywords', placeholder:I18n.t('search')+'...', class:'form-control input-sm'%>
</div>
<table class='table table-hover table-condensed table-striped'>
  <thead>
    <tr>
      <th>Id</th>
      <th><%=I18n.t('simple_form.labels.bot.name')%></th>
      <th><%=I18n.t('simple_form.labels.bot.created_at')%></th>
      <th><%=I18n.t('simple_form.labels.bot.updated_at')%></th>
    </tr>
  </thead>
  <tbody>
    <% @bots.each do |bot| %>
      <tr>
        <td><%=bot.id%></td>
        <td><%=link_to bot.name, edit_bot_path(bot) %></td>
        <td><%=I18n.l bot.created_at, format: :long%></td>
        <td><%=I18n.l bot.updated_at, format: :long%></td>
      </tr>
    <%end%>
  </tbody>
</table>
<%= will_paginate @bots, class:'apple_pagination' %>
<div class="button-bar">
  <%=link_to I18n.t('add_bot'), new_bot_path, class: 'btn btn-primary'%>
</div>

