    <div class="row">
        <!-- Sidebar Column -->
        <div class="col-md-3">
          <div class="panel panel-primary">
            <div class="panel-heading">Plateformes</div>
            <div class="list-group">
              <% Bot::PLATFORMS.each do |platform|%>
                  <%= link_to platform, bot_directory_path(platform: platform, category: @category), class: 'list-group-item' %>
              <%end%>
            </div>
          </div>
          <div class="panel panel-primary">
            <div class="panel-heading">Cat√©gories</div>
            <div class="list-group">
              <% Bot::CATEGORIES.each do |category|%>
                  <%= link_to category, bot_directory_path(category: category , platform: @platform), class: 'list-group-item' %>
              <%end%>
            </div>
          </div>
        </div>
        <div class="col-md-9">
            <h2><%=@title%></h2>
            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Soluta, et temporibus, facere perferendis veniam beatae non debitis, numquam blanditiis necessitatibus vel mollitia dolorum laudantium, voluptate dolores iure maxime ducimus fugit.</p>
            <%@bots.each do |bot|%>
            <%= link_to bot do %>
              <div class='card panel panel-default col-md-6'>
                <h4><%=bot.name%></h4>
                <%=bot.description%><br>
                 <% unless bot.categories.nil?%>

                <%= bot.categories.map{|c| "<span class='label label-default'>#{c}</span>"}.join(' ').html_safe %>
              <br>
              <%end%>
              <% unless bot.platforms.nil?%>
                <%= bot.platforms.map{|p| "<span class='label label-default'>#{p}</span>"}.join(' ').html_safe %>
              <br>
              <%end%>
                </div>

            <%end%>
            <%end%>
            <p class='clearfix'>
            <%=link_to 'Nouveau bot', new_bot_path, class: 'btn btn-default btn-xs'%>
            </p>
        </div>
    </div>

</div>